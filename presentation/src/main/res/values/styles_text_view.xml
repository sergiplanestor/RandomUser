<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:drawableTint">@color/secondary_light</item>
    </style>

    <style name="Text.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Text.WidthWrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Text.SingleLine.WidthWrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Text.WidthConstraint">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Text.SingleLine.WidthConstraint">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Text.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary_accent</item>
        <item name="android:textAppearance">@style/TextAppearance.Overline</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="maxLines">1</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>